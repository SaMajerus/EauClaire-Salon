@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Your Clients</h1>

@if (@Model.Count == 0)
{
  <h3>
    You haven't added any clients yet!
  </h3>
}

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Show", new { id = client.ClientId }) - @client.Stylist.Name</li>
  }
</ul>

<p>
  @Html.ActionLink("Add a Client", "Create")
</p>
<p>
  @Html.ActionLink("See all stylists", "Index", "Stylists")
</p>
<p>
  @Html.ActionLink("Home", "Index", "Home")
</p>
