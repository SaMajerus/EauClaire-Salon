@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Types of Food</h1>

@if (Model.Count == 0)
{
  <h3>No types of food have been added yet.</h3>
}

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.CuisineName}", "Show", new { id = cuisine.CuisineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new type of food", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>